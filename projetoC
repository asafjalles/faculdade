#include <stdio.h>

int main() {
	int vetor[4];
	printf("Informe o primeiro Vetor: ");
	scanf("%d", &vetor[1]);
	printf("Informe o segundo Vetor: ");
	scanf("%d", &vetor[2]);
	printf("Informe o terceiro Vetor: ");
	scanf("%d", &vetor[3]);


	printf("Vetor[1] = %d \n", vetor[1]);
	printf("Vetor[2] = %d \n", vetor[2]);
	printf("Vetor[3] = %d \n", vetor[3]);

	return 0;
}
